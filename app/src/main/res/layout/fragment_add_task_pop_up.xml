<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_custom_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="2dp">


    <TextView
        android:id="@+id/vallalomTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/comment_border"
        android:backgroundTint="@color/white"
        android:padding="15sp"
        android:text="Vállalom" />

    <TextView
        android:id="@+id/keszTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vallalomTextView"
        android:layout_centerInParent="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/comment_border"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:padding="15sp"
        android:text="Kész" />

    <TextView
        android:id="@+id/postazvaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/keszTextView"
        android:layout_centerInParent="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/comment_border"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:padding="15sp"
        android:text="Postázva" />

    <TextView
        android:id="@+id/torlesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/postazvaTextView"
        android:layout_centerInParent="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/comment_border"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:padding="15sp"
        android:text="Törlés" />
</RelativeLayout>