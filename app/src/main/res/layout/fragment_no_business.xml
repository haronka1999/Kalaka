<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.NoBusinessFragment">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Még nem hoztál lérte vállalkozást"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/createBusinessButton"
        app:layout_constraintEnd_toEndOf="@id/createBusinessButton"
        app:layout_constraintStart_toStartOf="@id/createBusinessButton" />

    <Button
        android:id="@+id/createBusinessButton"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:text="Létrehozás"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>